# TEST:  read stack registers
# 
# Virtual-ISA: tactyk_core
# Templates:  
#   assign data-stackreg (DSreg)

PROGRAM prg
  TEST_GET_MCTX:
    assign a mctx
    mctxpush
    assign b mctx
    mctxpush
    assign c mctx
    mctxjump 1234
    assign d mctx
    mctxpop
    assign e mctx
    mctxpop
    assign f mctx
    exit
  
  TEST_GET_LWCS:
    assign f lwc
    lwcall LEVEL_1
    exit
  
  LEVEL_1:
    assign e lwc
    lwcall LEVEL_2
    lwreturn
    
  LEVEL_2:
    lwcall LEVEL_3
    assign a lwc
    lwreturn
  LEVEL_3:
    assign d lwc
    lwcall LEVEL_4
    lwreturn
  LEVEL_4:
    lwcall LEVEL_5
    assign b lwc
    lwreturn
  LEVEL_5:
    assign c lwc
    lwreturn
    

EXEC TEST_GET_MCTX
TEST
  rMCSI 1232
  rA 0
  rB 1
  rC 2
  rD 1234
  rE 1233
  rF 1232


EXEC TEST_GET_LWCS
TEST
  rA 2
  rB 4
  rC 5
  rD 3
  rE 1
  rF 0
  lwcstack 0 14
  lwcstack 1 17
  lwcstack 2 19
  lwcstack 3 23
  lwcstack 4 25
