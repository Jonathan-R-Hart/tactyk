# TEST:  Bounds checking for store instructions (float)
#
# This verifies that tactyk halts when out-of-bounds offsets are used in store instructions
# 
# Virtual-ISA: tactyk_core
# 
# Coverage:
#   store float-addr-data-data    (XADX)
#   store float-addr-integer-data (XAIX)
#   store float-addr-const-data   (XACX)

PROGRAM
  struct st
    1 i0
    1 i1
    1 i2
    1 i3
    1 i4
    1 i5
    1 i6
    1 i7
    1 i8
    1 i9
  
  const CN1 -1
  const C0 0
  const C1 1
  const C2 2
  const C3 3
  const C4 4
  const C5 5
  const C6 6
  const C7 7
  const C8 8
  const C9 9
  const C10 10
  
  mem mm st 1
  
  INIT:
    bind addr1 mm
    assign xA 1000
    exit
  
  st_XADX_neg:
    add xA 1
    assign b -1
    store float addr1 rB xA
    exit
  st_XADX_zero:
    add xA 1
    assign b 0
    store float addr1 rB xA
    exit
  st_XADX_edge:
    add xA 1
    assign b 2
    store float addr1 rB xA
    exit
  st_XADX_cross:
    add xA 1
    assign b 3
    store float addr1 rB xA
    exit
  st_XADX_far:
    add xA 1
    assign b 9
    store float addr1 rB xA
    exit
  st_XADX_beyond:
    add xA 1
    assign b 10
    store float addr1 rB xA
    exit
  
  st_XAIX_neg:
    add xA 1
    store float addr1 -1 xA
    exit
  st_XAIX_zero:
    add xA 1
    store float addr1 0 xA
    exit
  st_XAIX_edge:
    add xA 1
    store float addr1 2 xA
    exit
  st_XAIX_cross:
    add xA 1
    store float addr1 3 xA
    exit
  st_XAIX_far:
    add xA 1
    store float addr1 9 xA
    exit
  st_XAIX_beyond:
    add xA 1
    store float addr1 10 xA
    exit
  
  st_XACX_neg:
    add xA 1
    store float addr1 CN1 xA
    exit
  st_XACX_zero:
    add xA 1
    store float addr1 C0 xA
    exit
  st_XACX_edge:
    add xA 1
    store float addr1 C2 xA
    exit
  st_XACX_cross:
    add xA 1
    store float addr1 C3 xA
    exit
  st_XACX_far:
    add xA 1
    store float addr1 C9 xA
    exit
  st_XACX_beyond:
    add xA 1
    store float addr1 C10 xA
    exit

EXEC INIT
TEST
  addr1 mm 0
  xA 1000

EXEC st_XADX_neg
TEST
  status 101
  xA 1001
  rB -1
EXEC st_XADX_zero
TEST
  status 4
  xA 1002
  rB 0
  mem mm 0 float 1002
EXEC st_XADX_edge
TEST
  status 4
  xA 1003
  rB 2
  mem mm 2 float 1003
EXEC st_XADX_cross
TEST
  status 101
  xA 1004
  rB 3
EXEC st_XADX_far
TEST
  status 101
  xA 1005
  rB 9
EXEC st_XADX_beyond
TEST
  status 101
  xA 1006
  rB 10


EXEC st_XAIX_neg
TEST
  status 101
  xA 1007
EXEC st_XAIX_zero
TEST
  status 4
  xA 1008
  mem mm 0 float 1008
EXEC st_XAIX_edge
TEST
  status 4
  xA 1009
  mem mm 2 float 1009
EXEC st_XAIX_cross
TEST
  status 101
  xA 1010
EXEC st_XAIX_far
TEST
  status 101
  xA 1011
EXEC st_XAIX_beyond
TEST
  status 101
  xA 1012

EXEC st_XACX_neg
TEST
  status 101
  xA 1013
EXEC st_XACX_zero
TEST
  status 4
  xA 1014
  mem mm 0 float 1014
EXEC st_XACX_edge
TEST
  status 4
  xA 1015
  mem mm 2 float 1015
EXEC st_XACX_cross
TEST
  status 101
  xA 1016
EXEC st_XACX_far
TEST
  status 101
  xA 1017
EXEC st_XACX_beyond
TEST
  status 101
  xA 1018
